{
    "name":                 "splash/shopify",
    "description":          "Splash Shopify API Connector (Embedded)",

    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": { 
            "Splash\\Connectors\\Shopify\\":            "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Connectors\\Shopify\\Test\\":     "tests/"
        }        
    },

    "require": {
        "php":                                          "^8.0",
        "ext-json":                                     "*",
        "splash/php-bundle":                            "dev-master",
        "slince/shopify-api-php":                       "^3.1.0",
        "knpuniversity/oauth2-client-bundle":           "~2.0",
        "nategood/httpful":                             "@stable"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "~2.0",
        "splash/toolkit":                               "dev-master"
    },

    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear --no-debug",
            "php bin/console assets:install --relative",
            "php bin/console doctrine:schema:update --force --complete --no-interaction --no-debug",
            "find var/cache/dev/*.xml | while read -r i; do cp \"$i\" var/cache/dev/testContainer.xml; done"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "php bin/console sonata:user:create Toolkit toolkit@splashsync.com toolkit --super-admin || exit 0"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "archive": {
        "exclude": ["/config", "/bin", "/ci", "/docs", "/tests"]
    },

    "config": {
        "allow-plugins": {
            "phpro/grumphp":    true,
            "symfony/runtime":  true
        }
    },

    "extra": {
        "public-dir": "tests/public"
    }
}
